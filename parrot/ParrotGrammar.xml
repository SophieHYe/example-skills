<?xml version="1.0" encoding="utf-8"?>
<grammar xml:lang="en-US" version="1.0" root="root"
	xmlns="http://www.w3.org/2001/06/grammar" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.w3.org/2001/06/grammar http://www.iristk.net/xml/srgs.xsd" tag-format="semantics/1.0">

  <rule id="root" scope="public">	
      <one-of>
  		<item> parrot <tag> out="This skill has that as a name"</tag> </item>
  		<item>yes<tag>out.yes=1</tag></item>
   		<item>no<tag>out.no=1</tag></item>
   		<item>
   			<ruleref uri="#goodbye"/>
      		<tag>out.goodbye = 1</tag>
   		</item>
      </one-of>
  </rule>

	<rule id="goodbye">
		<item>
	    	<one-of>
	    		<item>bye</item>
	    		<item>goodbye</item>
	    		<item>goodbye furhat</item>
	    		<item>see you later</item>
	    		<item>bye bye</item>
				<item>goodbye take care</item>
			    <item>take care goodbye</item>
	    	</one-of>
        </item>
    </rule>
  
</grammar>
